{
    "compilerOptions": {
        "outDir": "./dist/intermediates/",
        "module": "ES2015",
        "target": "ES2015",
        "removeComments": true,
        "allowJs": true,
        "noImplicitUseStrict": true,
        "strictFunctionTypes": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "intermediates"
    ]
}
